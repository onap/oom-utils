include environment.config

all: generate install

generate: clean
	./generate.sh $(REPOSITORY_URL_HTTPS) $(REPOSITORY_BRANCH) $(SCHEMAS_LOCATION) $(VENDOR_NAME) $(SPEC_CONFIGMAP_FILENAME) $(K8S_CONFIGMAP_NAME) $(SNIPPET_FILENAME) $(SPEC_CONFIGMAP_DIRECTORY) $(GENERATION_DIRECTORY)

install:
	./install.sh $(SPEC_CONFIGMAP_FILENAME) $(K8S_CONFIGMAP_NAME) $(SPEC_CONFIGMAP_DIRECTORY) $(GENERATION_DIRECTORY)

clean:
	./clean.sh $(GENERATION_DIRECTORY)
